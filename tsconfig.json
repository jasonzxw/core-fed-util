{
    "compilerOptions": {
      "target": "ES2018",
      "module": "ESNext",
      "declaration": true,
      "declarationMap": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": "./src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  } 